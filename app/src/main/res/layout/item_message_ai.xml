<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="8dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="80dp"
            app:cardBackgroundColor="@color/ai_message_bg"
            app:cardCornerRadius="18dp"
            app:cardElevation="1dp"
            app:strokeColor="@color/border_light"
            app:strokeWidth="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 思考过程区域 -->
                <LinearLayout
                    android:id="@+id/layout_reasoning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingBottom="12dp">

                    <LinearLayout
                        android:id="@+id/layout_reasoning_toggle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_chevron_down"
                            app:tint="@color/primary_gradient_start"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="查看深度思考"
                            android:textSize="13sp"
                            android:textColor="@color/primary_gradient_start"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- 思考内容 -->
                    <LinearLayout
                        android:id="@+id/layout_reasoning_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/reasoning_background"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingBottom="8dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_brain"
                                app:tint="@color/text_secondary"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="模型思考过程"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_reasoning"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- AI消息内容 -->
                <TextView
                    android:id="@+id/text_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxWidth="280dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:lineSpacingExtra="4dp"
                    android:autoLink="web|email|phone"
                    android:linksClickable="true" />

                <!-- 免责声明 -->
                <LinearLayout
                    android:id="@+id/layout_disclaimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="12dp"
                    android:animateLayoutChanges="false"
                    android:layerType="software">>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="4dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_info"
                            app:tint="@color/warning"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="提示"
                            android:textSize="14sp"
                            android:textColor="@color/warning"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_disclaimer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="建议仅供参考，请结合自身情况做出最终决策。"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/text_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刚刚"
            android:textSize="11sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="@id/card_message"
            app:layout_constraintTop_toBottomOf="@id/card_message" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>